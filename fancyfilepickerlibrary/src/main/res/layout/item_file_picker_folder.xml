<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_file_picker_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_folder_orange_48dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_file_picker_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_folder_name"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/font_primary"
        android:maxLines="1"
        android:ellipsize="middle"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_file_picker_folder"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_file_picker_folder_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_folder_description_default"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/font_second"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_file_picker_folder_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/image_file_picker_folder"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>